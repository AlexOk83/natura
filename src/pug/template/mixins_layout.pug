mixin breadcrumbs(class_el, position_a)
  .breadcrumbs(class= {'position_a': position_a})
    ul(class= {'black': class_el == 'black'})
      li
        a(href="index.html") Главная
      li
        a(href="index.html") Продукция
mixin breadcrumbs_new(isBlack, mas, name)
    ul.breadcrumbs(class={'breadcrumbs--black': isBlack})
      li.breadcrumbs__item: a(href="index.html") Главная
      each item in mas
        li.breadcrumbs__item: a(href="#")= item
      li.breadcrumbs__item: span= name

