mixin menu(page)
  +modal_chat2()
  +modal_phone2()
  +modalWindows2()
  .menu(class= {'menu--main': page == 'index'})
    .menu__left
      .button.button__toggle-menu
      .menu__wrapper
        ul.menu__list
          each item in menuList
            li.menu__item(class= {'active': page == item.url})
              if (item.submenu)
                a(href= item.url + '.html' data-menu= item.url)= item.name
              else
                a(href= item.url + '.html')= item.name
        div.desktop__footer
          li.menu__item.menu__item--small
            a(href='#' data-link='m-chat-all')
              i.icon.icon--chat
              span Онлайн-чат
          li.menu__item.menu__item--small
            a(href='#' data-link='m-phone-all')
              i.icon.icon--phone
              span Заказать звонок

        .mobile__footer
          a.mobile__footer__icon.icon--profile(href='#' data-link='sign-in-mobile')
          a.mobile__footer__icon.icon--phone(href='#' data-link='m-phone-all')
          a.mobile__footer__icon.icon--chat(href='#' data-link='m-chat-all')

    each item in menuList
      if (item.submenu)
        div.sub-menu(id= item.url)
          .sub-menu__wrapper
            each menu1 in item.submenu
              .sub-menu__item(class= 'column-' + menu1.size)
                .sub-menu__title= menu1.name
                if (menu1.submenu)
                  each menu2 in menu1.submenu
                    if (menu2)
                      ul.sub-menu__list
                        if (menu2.submenu)
                          li.sub-menu__list__title= menu2.name
                          each menu3 in menu2.submenu
                            if (menu3)
                              li.sub-menu__text: a(href= menu3.url)= menu3.name
                        else
                          if (menu2.url)
                            li.sub-menu__text: a(href= menu2.url)= menu2.name
                          else
                            li.sub-menu__text: span= menu2.name


